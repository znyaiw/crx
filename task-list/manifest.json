{
    "manifest_version": 2,
    "name": "TaskList",
    "version": "0.2.0",
    "description": "一款简洁的待办事务列表插件",
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "icons/icon_16.png",
            "32": "icons/icon_32.png",
            "48": "icons/icon_48.png",
            "128": "icons/icon_128.png"
        },
        "default_title": "TaskList——一款简洁的待办事务列表插件",
        "default_popup": "index.html"
    },
    "permissions": [
        "declarativeContent",
        "storage"
    ],
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+A",
                "mac": "Command+Shift+A"
            }
        }
    }
}
